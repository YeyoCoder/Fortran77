      PROGRAM LineContinuation
C23456789 (THIS DEMOSTRATES COLUMN POSITION!)
C     THE NEXT STATEMENT GOES OVER TWO PHYSICAL LINES
      REAL r,area
      WRITE(*,*)'Input radius r: '
      READ(*,*)r
      area =3.14159265358979
     +     *r *r
      WRITE(*,*)'Area = ',area
      READ(*,*)
      STOP
      END
      
